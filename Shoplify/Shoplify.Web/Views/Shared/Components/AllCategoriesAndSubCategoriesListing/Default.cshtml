@model Shoplify.Web.ViewModels.CategoryAndSubCategory.ListingViewModel

    <div class="container-fluid mb-100 margin-top-2rem">

        @{ var i = 0; }
        @foreach (var kvp in Model.CategoriesWithSubCategories)
        {
            @if (i == 0)
            {
                @Html.Raw("<div class='row col-md-8 mx-auto'>")
            }

            @if (i % 6 == 0)
            {
                @Html.Raw("</div><div class='row col-md-8 mx-auto'>")
            }
            <div class="col-md">
                <ul>
                    <a href="/Advertisement/GetByCategory?categoryId=@kvp.Key.Id"><i class="@kvp.Key.CssIconClass"></i> @kvp.Key.Name</a>
                    @foreach (var subCategory in kvp.Value)
                    {
                        <li>
                            <a href="/Advertisement/GetByCategory?categoryId=@subCategory.Id">@subCategory.Name</a>
                        </li>
                    }
                </ul>
            </div>

            i++;
        }
    </div>

