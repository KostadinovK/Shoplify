@using Shoplify.Common
@model Shoplify.Web.ViewModels.User.LoggedInProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}
<div class="container-fluid margin-top-4rem">
    <div class="row">
        <div class="col-md-10 mx-auto text-center mb-15">
            <div style="max-width: 128px; max-height: 128px" class="margin-bottom-2rem mx-auto">
                <img src="data:image/png;base64," class="img-fluid order-1 order-sm-1" alt="">
            </div>
            <h3 class="margin-bottom-2rem">@Model.Username</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 mx-auto mb-100">
            <div class="text-center mb-15">
                <a href="#" class="btn btn-pink">Wishlist</a>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-pink">Settings</a>
            </div>
            
            <div class="text-center mb-15">
                <a href="#" class="btn btn-pink">View Banned Ads</a>
                <a href="#" class="btn btn-pink">View Archived Ads</a>
            </div>

            <h2 class="text-center margin-top-4rem margin-bottom-2rem">My Ads</h2>
            <table class="table">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Created On</th>
                    <th scope="col">Archive On</th>
                    <th scope="col">Views</th>
                    <th scope="col">Promote Until</th>
                    <th scope="col">Details</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.Advertisements.Count == 0)
                {
                    <h1 class="text-center margin-bottom-4rem margin-top-4rem">Sorry, no ads found...</h1>
                }

                @for (var i = 0; i < Model.Advertisements.Count; i++)
                {
                    <tr>
                        <th scope="row">@Model.Advertisements[i].Name</th>
                        <td>@Model.Advertisements[i].Price</td>
                        <td>@Model.Advertisements[i].CategoryName -> @Model.Advertisements[i].SubCategoryName</td>
                        <td>@Model.Advertisements[i].CreatedOn</td>
                        <td>@Model.Advertisements[i].ArchivedOn</td>
                        <td>@Model.Advertisements[i].Views</td>
                        @if (Model.Advertisements[i].IsPromoted)
                        {
                            <td>@Model.Advertisements[i].PromotedUntil</td>
                        }
                        else
                        {
                            <td>
                                <div class="button-holder">
                                    <a asp-controller="Advertisement" asp-action="Details" asp-route-id="@Model.Advertisements[i].Id" class="btn btn-warning">Promote</a>
                                </div>
                            </td>
                        }
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Advertisement" asp-action="Details" asp-route-id="@Model.Advertisements[i].Id" asp-route-returnUrl="@Url.Action("Profile", "User", new { })" class="btn btn-details">Details</a>
                            </div>
                        </td>
                    </tr>
                }

                </tbody>

            </table>
            <div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="pagination mx-auto">
                    @{
                        var prevPage = Model.CurrentPage - 1;
                        var nextPage = Model.CurrentPage + 1;
                    }
                    @if (Model.CurrentPage != 1)
                    {
                        <a href="/User/Profile?@Model.PageParam&page=@prevPage" class="prev-arrow "><i class="fas fa-arrow-left"></i></a>
                    }

                    @for (var j = 1; j <= (Model.TotalAdsCount / GlobalConstants.AdsOnPageCount) + 1; j++)
                    {
                        @if (j == Model.CurrentPage)
                        {
                            <a class="active" href="/User/Profile?@Model.PageParam&page=@j">@j</a>
                        }
                        else if (j >= Model.CurrentPage - 4 && (j <= Model.CurrentPage + 4 && j <= Model.LastPage))
                        {
                            <a href="/User/Profile?@Model.PageParam&page=@j">@j</a>
                        }
                    }

                    @if (Model.CurrentPage != Model.LastPage)
                    {
                        <a href="/User/Profile?@Model.PageParam&page=@nextPage" class="next-arrow"><i class="fas fa-arrow-right"></i></a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>